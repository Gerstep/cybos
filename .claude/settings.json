{
  "env": {
    "CYBOS_VERSION": "1.1"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "Fetch(domain:*)",
      "WebFetch(domain:*)",
      "WebSearch",
      "NotebookRead",
      "NotebookEdit",
      "TodoWrite",
      "ExitPlanMode",
      "Task",
      "SlashCommand",
      "mcp__perplexity__perplexity_search",
      "mcp__perplexity__perplexity_research",
      "mcp__exa__*",
      "mcp__parallel-search__*",
      "mcp__parallel-task__createDeepResearch",
      "mcp__parallel-task__getResultMarkdown",
      "mcp__nano-banana__generate_image",
      "mcp__nano-banana__upload_file",
      "mcp__typefully__typefully_get_me",
      "mcp__typefully__typefully_list_social_sets",
      "mcp__typefully__typefully_create_draft",
      "mcp__typefully__typefully_create_media_upload",
      "mcp__typefully__typefully_get_media_status",
      "mcp__gmail__search_emails",
      "mcp__gmail__read_email",
      "mcp__gmail__draft_email",
      "mcp__gmail__download_attachment",
      "mcp__calendar__get-current-time",
      "mcp__calendar__list-calendars",
      "mcp__calendar__list-events",
      "mcp__calendar__search-events",
      "mcp__calendar__get-event",
      "mcp__calendar__create-event",
      "mcp__calendar__update-event",
      "mcp__calendar__delete-event",
      "mcp__calendar__get-freebusy",
      "mcp__calendar__respond-to-event"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun .claude/hooks/load-context.ts"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "ralph-wiggum@claude-code-plugins": false
  },
  "alwaysThinkingEnabled": true
}
